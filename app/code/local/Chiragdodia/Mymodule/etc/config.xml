<config>
    <modules>
        <Chiragdodia_Mymodule>
            <version>0.1.1</version>
        </Chiragdodia_Mymodule>
    </modules>
    <frontend>
        <routers>
            <contacts>
                <use>standard</use>
                <args>
                    <module>Chiragdodia_Mymodule</module>
                    <frontName>mymodule</frontName>
                </args>
            </contacts>
        </routers>
        <translate>
            <modules>
                <Chiragdodia_Mymodule>
                    <files>
                        <default>Chiragdodia_Mymodule.csv</default>
                    </files>
                </Chiragdodia_Mymodule>
            </modules>
        </translate>
        <layout>
            <updates>
                <contact>
                    <file>contacts.xml</file>
                </contact>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <contacts>
                <class>Chiragdodia_Mymodule_Model</class>
                <resourceModel>contacts_mysql4</resourceModel>
            </contacts>
            <contacts_mysql4>
                <class>Chiragdodia_Mymodule_Model_Mysql4</class>
                <entities>
                    <contacts>
                        <table>contact_details</table>
                    </contacts>
                </entities>
            </contacts_mysql4>
        </models>
        <resources>
            <contacts_setup>
                <setup>
                    <module>Chiragdodia_Mymodule</module>
                </setup>
            </contacts_setup>
            <contacts_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </contacts_read>

            <contacts_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </contacts_write>
        </resources>
        <template>
            <email>
                <contacts_email_email_template translate="label" module="contacts">
                    <label>Contact Form</label>
                    <file>contact_form.html</file>
                    <type>text</type>
                </contacts_email_email_template>
            </email>
        </template>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Chiragdodia_Mymodule>
                    <files>
                        <default>Chiragdodia_Mymodule.csv</default>
                    </files>
                </Chiragdodia_Mymodule>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <contacts>
            <contacts>
                <enabled>1</enabled>
            </contacts>
            <email>
                <recipient_email><![CDATA[hello@example.com]]></recipient_email>
                <sender_email_identity>custom2</sender_email_identity>
                <email_template>contacts_email_email_template</email_template>
            </email>
        </contacts>
    </default>
</config>